@model ProjetFinal_6224745.ViewModels.AgresAfficheViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-auto">
        <h1>Détails de l'appareil : @Model.Agres.Nom</h1>
        <p><a asp-controller="Mouvements" asp-action="Index">Liste de mouvements</a></p>
    </div>
    <div class="col-auto">
        <img src="@(Model.AfficheContent)" alt="@(Model.Agres.Nom)" />
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Difficulté</th>
            <th>Nombre de mouvements</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DetailAgre)
        {
            <tr>
                <td>@item.Difficulte</td>
                <td>@item.NombreDeMouvementParDifficult</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>
